{
  "name": "youtube-transcription-app",
  "version": "1.0.0",
  "description": "Aplicação web completa para transcrição automática de vídeos do YouTube usando APIs de IA",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install"
  },
  "keywords": [
    "youtube",
    "transcription",
    "openai",
    "claude",
    "mcp",
    "ai",
    "web-app"
  ],
  "author": "Julio Pessoa",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "youtube-transcript-api": "^1.0.1",
    "openai": "^4.20.1",
    "@anthropic-ai/sdk": "^0.9.1",
    "multer": "^1.4.5-lts.1",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}